{
  "Definitions": [
    {
      "Name": "DoNotExposePlaintextSecrets",
      "Id": "SEC1001",
      "Level": "Error",
      "DefaultNameRegex": "(?i)\\.(azure|bat|cmd|config|cpp|cs|cscfg|definitions|dtsx|ini|java|jsx?|json|keys|loadtest|m|md|php|properties|ps1|psm1|pubxml|py|resx|sample|sql|ste|swift|test|tsx?|txt|waz|xml)$",
      "Description": "Do not expose plaintext (or base64-encoded plaintext) secrets in versioned engineering content.",
      "Message": "'{0:scanTarget}' contains an apparent {1:encoding}'{2:secretKind}' secret.",
      "MatchExpressions": [
        {
          "SubId": "AzureDevOpsPersonalAccessToken",
          "Base64DecodedContentLength": 52,
          "ContentsRegex": "\\b(?<fingerprint>[a-z2-7]{52})",
          "MessageArguments": { "secretKind": "Azure DevOps personal access token" }
        },
        {
          "SubId": "FacebookOAuthToken",
          "ContentsRegex": "(?i)facebook.{0,30}['\"\\s]([0-9a-f]{32})['\"\\s]",
          "MessageArguments": { "secretKind": "Facebook OAuth token" }
        },
        {
          "SubId": "TwitterOAuthToken",
          "ContentsRegex": "(?i)twitter.{0,30}['\"\\s]([0-9a-zA-Z]{35,44})['\"\\s]",
          "MessageArguments": { "secretKind": "Twitter OAuth token" }
        },
        {
          "SubId": "GoogleOAuth",
          "ContentsRegex": "\"client_secret\":\"([a-zA-Z0-9-_]{24})\"",
          "MessageArguments": { "secretKind": "Google OAuth token" }
        },
        {
          "SubId": "SlackToken",
          "ContentsRegex": "(xox[p|b|o|a]-[0-9]{12}-[0-9]{12}-[0-9]{12}-[a-z0-9]{32})",
          "MessageArguments": { "secretKind": "Slack token" }
        },
        {
          "SubId": "GitHubToken",
          "ContentsRegex": "(?i)github.{0,30}['\"\\s]([0-9a-zA-Z]{35,40})['\"\\s]",
          "MessageArguments": { "secretKind": "GitHub token" }
        }
      ]
    }
  ]
}