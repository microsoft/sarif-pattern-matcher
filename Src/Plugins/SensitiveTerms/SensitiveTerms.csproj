<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(MSBuildThisFileDirectory)..\..\..\Targets\build.common.props" />
  <Import Project="$(MSBuildThisFileDirectory)..\..\..\Targets\build.product.props" />
  <Import Project="$(MSBuildThisFileDirectory)..\..\..\Targets\build.plugins.props" />

  <PropertyGroup Label="AssemblyAttributes">
    <TargetFrameworks>netstandard2.0;net472</TargetFrameworks>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <RootNamespace>$(RootNamespaceBase).Sarif.PatternMatcher.Plugins.SensitiveTerms</RootNamespace>
    <PackageId>Sarif.PatternMatcher.SensitiveTerms</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="build\Sarif.PatternMatcher.SensitiveTerms.targets">
      <PackagePath>build\</PackagePath>
    </Content>
    <Content Include="SensitiveTerms.SharedStrings.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="SEC106.SensitiveTerms.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Sarif.PatternMatcher.Sdk\Sarif.PatternMatcher.Sdk.csproj" />
  </ItemGroup>

  <Target Name="CopyingSpam" AfterTargets="Build">
    <ItemGroup>
      <SecurityFile Include="$(OutputPath)SensitiveTerms.dll" />
      <SpamFiles Include="SEC106.SensitiveTerms.json" />
    </ItemGroup>
    <Copy SourceFiles="@(SpamFiles)" DestinationFolder="$(SolutionDir).spam\SensitiveTerms\" OverwriteReadOnlyFiles="true" SkipUnchangedFiles="false" />
    <Copy SourceFiles="@(SecurityFile)" DestinationFolder="$(SolutionDir).spam\SensitiveTerms\" OverwriteReadOnlyFiles="true" SkipUnchangedFiles="false" ContinueOnError="true" />
    <Copy SourceFiles="SensitiveTerms.SharedStrings.txt" DestinationFolder="$(SolutionDir).spam\SensitiveTerms\" OverwriteReadOnlyFiles="true" SkipUnchangedFiles="false" />
  </Target>
</Project>
